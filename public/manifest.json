{
    "name": "Bookmark Cleaner 一键清理失效书签",
    "version": "0.0.2",
    "manifest_version": 3,
    "description": "自动检测失效书签链接，一键清理 🚀",
    "default_locale": "zh_CN",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "action": {
        "default_popup": "index.html",
        "default_title": "点击去清理~"
    },
    "permissions": [
        "bookmarks"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}